{
	"name": "ink-confirm-input",
	"version": "1.0.3",
	"description": "Confirmation input component for Ink",
	"license": "MIT",
	"repository": "kevva/ink-confirm-input",
	"author": {
		"name": "Kevin MÃ¥rtensson",
		"email": "kevinmartensson@gmail.com",
		"url": "https://github.com/kevva"
	},
	"engines": {
		"node": ">=6"
	},
	"scripts": {
		"build": "babel src/index.js --out-file=dist.js",
		"prepublish": "npm run build",
		"pretest": "npm run build",
		"test": "xo && ava"
	},
	"main": "dist.js",
	"files": [
		"dist.js"
	],
	"keywords": [
		"boolean",
		"checked",
		"component",
		"confirm",
		"input",
		"ink",
		"no",
		"yes"
	],
	"dependencies": {
		"ink-text-input": "^1.1.0",
		"prop-types": "^15.5.10"
	},
	"devDependencies": {
		"ava": "^1.3.1",
		"babel-cli": "^6.24.1",
		"babel-plugin-transform-react-jsx": "^6.24.1",
		"eslint-config-xo-react": "^0.13.0",
		"eslint-plugin-react": "^7.1.0",
		"ink": "^0.5.1",
		"sinon": "^2.3.8",
		"xo": "^0.24.0"
	},
	"ava": {
		"babel": {
			"presets": [
				"@ava/stage-4"
			],
			"plugins": [
				[
					"transform-react-jsx",
					{
						"pragma": "h",
						"useBuiltIns": true
					}
				]
			]
		}
	},
	"babel": {
		"plugins": [
			[
				"transform-react-jsx",
				{
					"pragma": "h",
					"useBuiltIns": true
				}
			]
		]
	},
	"xo": {
		"extends": [
			"xo-react"
		],
		"ignores": [
			"dist.js"
		],
		"rules": {
			"jsx-quotes": [
				"error",
				"prefer-single"
			]
		},
		"settings": {
			"react": {
				"pragma": "h"
			}
		}
	}
}
